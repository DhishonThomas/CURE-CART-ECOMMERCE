            <section class="content-main">
                    <style>
    .list-green {
        color: white;
        background-color: green;
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 5px;
    }

    .unlist-red {
        color: white;
        background-color: red;
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 5px;
    }
    .fixed-width {
  width: 50px; /* Adjust the width as needed */
}


</style>
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                    <div>
                        <a href="#" class="btn btn-light rounded font-md">Export</a>
                        <a href="#" class="btn btn-light rounded font-md">Import</a>
                        <a href="#" class="btn btn-primary btn-sm rounded">Create new</a>
                    </div>
                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check ms-2">
                                    <input class="form-check-input" type="checkbox" value="" />
                                </div>
                            </div>
                            <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                                <select class="form-select">
                                    <option selected>All category</option>
                                    <option>Electronics</option>
                                    <option>Clothes</option>
                                    <option>Automobile</option>
                                </select>
                            </div>
                            <div class="col-md-2 col-6">
                                <input type="date" value="02.05.2021" class="form-control" />
                            </div>
                            <div class="col-md-2 col-6">
                                <select class="form-select">
                                    <option selected>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                        </div>
                    </header>
                    <!-- card-header end// -->
                    <div class="card-body">
                        <article class="itemlist">
                         <div class="card-body">
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th><strong class="text-white">ProductName</strong></th>
        <th><strong class="text-white">Price</strong></th>
        <th>Action</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr>
          <td>
            <img src="<%= product.images[0]%>" class="img-sm img-thumbnail" alt="Item" />
          </td>
          <td class="text-white"><strong><%= product.productName%></strong></td>
          <td class="text-white"><strong>&#8377;<%= product.price%></strong></td>
     <td>
  <a href="/admin/productListUlist/<%= product._id%>" class="list-toggle-button btn btn-sm font-sm fixed-width <%= product.isListed ? 'unlist-red' : 'list-green'%>">
    <%= product.isListed ? 'Unlist' : 'List' %>
  </a>
</td>
          <td>
            <a href="/admin/productListEdit/<%= product._id%>" class="btn btn-sm font-sm rounded btn-brand">
              <i class="material-icons md-edit"></i> Edit
            </a>
          </td>
          <td>
            <a href="/admin/productListDelete/<%= product._id%>" class="btn btn-sm font-sm btn-light rounded">
              <i class="material-icons md-delete_forever"></i> Delete
            </a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

</div>
