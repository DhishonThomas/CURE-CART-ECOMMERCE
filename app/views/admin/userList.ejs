  <%- include('../partials/header'); -%> 
<style>
    .message-container {
        color: crimson;
    }

    .block-btn {
        background-color: red;
        color: white;
    }

    .unblock-btn {
        background-color: green;
        color: white;
    }
</style>

   
   <section class="content-main">
                <div class="content-header">
                    <h2 class="content-title">User list</h2>
                    <div>
                        <a href="#" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
                    </div>
                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row gx-3">
                            <div class="col-lg-4 col-md-6 me-auto">
                                <input type="text" placeholder="Search..." class="form-control" />
                            </div>
                            <div class="col-lg-2 col-md-3 col-6">
                                <select class="form-select">
                                    <option>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-3 col-6">
                                <select class="form-select">
                                    <option>Show 20</option>
                                    <option>Show 30</option>
                                    <option>Show 40</option>
                                </select>
                            </div>
                        </div>
                    </header>
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                             <thead>
    <tr>
        <th>Users</th>
        <th>Email</th>
        <th>Mobile Number</th>
        <th>Status</th>
        <th>Verified</th>
        <!-- <th>Registered</th> -->
        <th>Action</th>
    </tr>
</thead>

<tbody>
    <% users.forEach(user => { %>
        <tr>
            <td width="40%">
                <a href="#" class="itemside">
                    <div class="left">
                        <img src="/adminCss/imgs/people/avatar-2.png" class="img-sm img-avatar" alt="Userpic" />
                    </div>
                    <div class="info pl-3">
                        <h6 class="mb-0 title"><%= user.username %></h6>
                        <small class="text-muted"><%= user._id %></small>
                    </div>
                </a>
            </td>
            <td><%= user.email %></td>
            <td><%= user.phonenumber %></td> <!-- Display the phone number -->
            <% if (user.isBlocked) { %>
             <td><span class="badge rounded-pill alert-success" >unblock</span></td>
            
            
            
             <% } else { %>
                 <td><span class="badge rounded-pill alert-success" >block</span></td>
                 <% } %>
            
            <td><span class="badge rounded-pill alert-success"><%= user.isVerified %></span></td>
             
                                <td>
    <a href="/admin/userUlist/<%=user._id %>" class="list-toggle-button btn btn-sm font-sm <%= user.isBlocked ? 'block-btn' : 'unblock-btn' %>"
        data-listed="<%= user.isBlocked %>">
        <%= user.isBlocked ? 'Block' : 'Unblock' %>
    </a>
</td>

        </tr>
    <% }) %>
</tbody>
</table>

                            <!-- table-responsive.// -->
                        </div>
                    </div>
                    <!-- card-body end// -->
                </div>
                <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <li class="page-item active"><a class="page-link" href="#">01</a></li>
                            <li class="page-item"><a class="page-link" href="#">02</a></li>
                            <li class="page-item"><a class="page-link" href="#">03</a></li>
                            <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                            <li class="page-item"><a class="page-link" href="#">16</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </section>
            <!-- content-main end// -->

            <%- include('../partials/footer'); -%>
           <script>
    const listToggleButtons = document.querySelectorAll('.list-toggle-button');

    listToggleButtons.forEach(button => {
        button.addEventListener('click', function () {
            const isBlocked = JSON.parse(this.getAttribute('data-listed'));
            this.setAttribute('data-listed', !isBlocked);
            this.innerText = isBlocked ? 'Block' : 'Unblock';
            this.classList.toggle('block-btn', isBlocked);
            this.classList.toggle('unblock-btn', !isBlocked);
        });
    });
</script>
